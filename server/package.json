{
    "name": "server",
    "private": true,
    "version": "0.1.0",
    "description": "Server for LeetRooms",
    "main": "index.js",
    "author": "Marwan Hawari",
    "license": "MIT",
    "scripts": {
        "dev": "export NODE_ENV=development && nodemon src/index.ts | pino-pretty --singleLine --levelFirst --translateTime",
        "build": "export NODE_ENV=production && rm -rf ./dist && tsc -p tsconfig.build.json",
        "start": "export NODE_ENV=production && node dist/src/index.js",
        "prisma-init": "set -a && . ../.env && set +a && prisma init --datasource-provider postgresql",
        "prisma-migrate": "set -a && . ../.env && set +a && prisma migrate dev",
        "prisma-generate": "set -a && . ../.env && set +a && npm install @prisma/client && prisma generate",
        "prisma-seed": "set -a && . ../.env && set +a && prisma db seed",
        "prisma-reset": "set -a && . ../.env && set +a && prisma migrate reset --skip-seed --skip-generate && npm run prisma-migrate && npm run prisma-generate && npm run prisma-seed"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@hewmen/passport-twitch": "^1.0.4",
        "@prisma/client": "^4.8.1",
        "axios": "^1.2.2",
        "connect-redis": "^6.1.3",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "helmet": "^6.0.0",
        "ioredis": "^5.2.4",
        "nanoid": "^3.3.4",
        "passport": "^0.6.0",
        "passport-discord": "^0.1.4",
        "passport-github2": "^0.1.12",
        "passport-google-oauth20": "^2.0.0",
        "pino": "^8.8.0",
        "pino-http": "^8.3.1",
        "socket.io": "^4.5.4",
        "@socket.io/admin-ui": "^0.5.1"
    },
    "devDependencies": {
        "@types/connect-redis": "^0.0.19",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/express-session": "^1.17.5",
        "@types/node": "^18.7.23",
        "@types/passport": "^1.0.11",
        "@types/passport-discord": "^0.1.6",
        "@types/passport-github2": "^1.2.5",
        "@types/passport-google-oauth20": "^2.0.11",
        "@types/pino-http": "^5.8.1",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.1.1",
        "prisma": "^4.7.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    }
}
